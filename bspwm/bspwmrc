#! /bin/sh

sxhkd &

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width         2
bspc config window_gap          12

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^1'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a google-chrome desktop='^1'
bspc rule -a code desktop='^3'
bspc rule -a subl desktop='^3'
bspc rule -a discord desktop='^4'

xsetroot -cursor_name left_ptr

xrdb ~/.Xresources

# Set a random wallpaper
# feh --randomize --bg-scale ~/Pictures/Wallpapers/*
# wal -i ~/Pictures/Wallpapers/wallpaper.jpg
~/./.config/bspwm/scripts/random_wallpapers.sh

~/./.config/bspwm/scripts/polybar-5.sh

compton -f

. "${HOME}/.cache/wal/colors.sh"

bspc config normal_border_color "$color1"
bspc config active_border_color "$color2"
bspc config focused_border_color "$color15"
bspc config presel_feedback_color "$color1"

# Manualy initiate mpd to the user logged
mpd
